{
  "name": "@hmcts/postgres-prisma",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "production": "./dist/index.js",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "yarn collate && prisma generate --no-hints && tsc",
    "collate": "tsx src/collate-schema.ts",
    "generate": "yarn collate && prisma generate --no-hints",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "7.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8",
    "glob": "npm:glob@^13.0.0",
    "prisma": "7.1.0"
  }
}
